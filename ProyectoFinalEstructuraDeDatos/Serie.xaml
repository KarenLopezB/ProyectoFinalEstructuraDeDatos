        <Label Content="Rating:" HorizontalAlignment="Left" Margin="8,257,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbGeneroS1" HorizontalAlignment="Left" Margin="352,118,0,0" VerticalAlignment="Top" Width="176" Height="26">
            <ComboBoxItem Content="Drama"/>
            <ComboBoxItem Content="Fantasía"/>
            <ComboBoxItem Content="Comedia"/>
            <ComboBoxItem Content="Thriller"/>
            <ComboBoxItem Content="Ciencia Ficción"/>
        </ComboBox>
        <Label Content="Temporadas:" HorizontalAlignment="Left" Margin="5,147,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.626,0.436"/>
        <TextBox x:Name="txtTituloS1" HorizontalAlignment="Left" Height="23" Margin="76,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="451"/>
        <TextBox x:Name="txtAñoS1" HorizontalAlignment="Left" Height="23" Margin="76,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196"/>
