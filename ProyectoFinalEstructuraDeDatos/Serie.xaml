        <TextBox x:Name="txtProductorS1" HorizontalAlignment="Left" Height="23" Margin="352,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="txtDescripcionS1" HorizontalAlignment="Left" Height="68" Margin="85,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="443"/>
        <ComboBox x:Name="cbRatingS1" HorizontalAlignment="Left" Margin="76,261,0,0" VerticalAlignment="Top" Width="156" Height="26">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
        </ComboBox>
        <TextBlock x:Name="txtTipoS1" Visibility="Hidden" HorizontalAlignment="Left" Margin="299,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
