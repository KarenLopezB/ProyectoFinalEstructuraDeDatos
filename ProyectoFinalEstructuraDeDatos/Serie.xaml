<UserControl x:Class="ProyectoFinalEstructuraDeDatos.Serie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoFinalEstructuraDeDatos"
             mc:Ignorable="d" 
             d:DesignHeight="287" d:DesignWidth="535">
    <Grid>
        <Label Content="Título:" HorizontalAlignment="Left" Margin="8,84,0,0" VerticalAlignment="Top" Height="25"/>
        <Label Content="Año:" HorizontalAlignment="Left" Margin="8,114,0,0" VerticalAlignment="Top" Width="43"/>
        <Label Content="Productor:" HorizontalAlignment="Left" Margin="282,150,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.626,0.436"/>
